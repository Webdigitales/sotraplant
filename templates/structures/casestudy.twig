{% extends "_layouts/generic-page-layout.twig" %}

{% block headLinks %}
	{{ parent() }}
{% endblock headLinks %}

{% block content %}
	<section class="section banner banner--with-img bg--secondary-offset">
		<div class="grid grid--col-2 grid--offset-1">
			<div class="col-span-1 md:pl-4 flex flex-col justify-center md:order-2">
				<span class="tag text-primary">{{ 'Case study'|t }}</span>
				{% include '_components/heading.twig' with {'headingLevel': '1', 'entity': entry} %}
			</div>
			<div class="col-span-1 -mr-1 md:mr-0">
				{% include '_components/image-portrait.twig' with {'entity': entry} %}
			</div>
		</div>
	</section>
	<div class="news__summary">
		<div class="grid grid--offset-2">
			<div class="col-span-1">
				<div class="text text--intro">
					{{ entry.summary }}
				</div>
			</div>
		</div>
	</div>
	{% include "_components/_matrix/index.twig" %}
	{% include "_components/call-to-action.twig" with {'entity': entry} %}
{% endblock %}

{% block subcontent %}
{% endblock %}

{# -- Any JavaScript that should be included before </body> -- #}
{% block bodyJs %}
	{{ parent() }}
{% endblock bodyJs %}
